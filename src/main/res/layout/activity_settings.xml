<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:theme="@style/Theme.Echtzeyt"
    tools:context=".SettingsActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpagerSettings"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spaceToolbarSettingsRadius" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutToolbarSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar"
        android:clipChildren="true"
        android:clipToOutline="true"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnusedAttribute">

        <com.maddin.echtzeyt.components.MenuTabLayout
            android:id="@+id/tabLayoutSettingsMenu"
            style="@style/Theme.Echtzeyt.TabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-12dp"
            android:background="@color/transparent"
            android:fadingEdge="horizontal"
            android:fadingEdgeLength="40dp"
            android:requiresFadingEdge="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbarSettings"
            app:paddingContent="@dimen/toolbar_radius"
            app:tabBackground="@color/transparent"
            app:tabGravity="center"
            app:tabIndicatorAnimationMode="elastic"
            app:tabIndicatorColor="@color/background"
            app:tabIndicatorGravity="bottom"
            app:tabIndicatorHeight="4dp"
            app:tabMinWidth="0dp"
            app:tabMode="auto"
            app:tabPaddingEnd="20dp"
            app:tabPaddingStart="20dp"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            app:tabTextColor="?attr/colorSecondary"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:minHeight="@dimen/toolbar_height"
            android:theme="?attr/actionBarTheme"
            app:title="@string/appNameSettings"
            app:titleMarginStart="6dp"
            app:titleTextColor="?attr/colorSecondary" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.maddin.echtzeyt.components.FloatingButton
        android:id="@+id/btnSettingsSave"
        android:layout_width="@dimen/bigfloating_size"
        android:layout_height="@dimen/bigfloating_size"
        android:layout_marginEnd="@dimen/bigfloating_margin"
        android:layout_marginRight="@dimen/bigfloating_margin"
        android:layout_marginBottom="@dimen/bigfloating_margin"
        android:background="@drawable/floatingbutton"
        android:contentDescription="@string/btnSettingsDescription"
        android:padding="@dimen/bigfloating_padding"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_check"
        app:radiusInner="@dimen/bigfloating_radius"
        app:shadowColors="@array/shadow_colors"
        app:shadowSize="@dimen/shadow_size"
        app:shadowStops="@array/shadow_stops"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Space
        android:id="@+id/spaceToolbarSettingsRadius"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/toolbar_radius"
        app:layout_constraintBottom_toBottomOf="@+id/layoutToolbarSettings"
        app:layout_constraintStart_toStartOf="parent" />

    <include layout="@layout/comp_build" />

</androidx.constraintlayout.widget.ConstraintLayout>