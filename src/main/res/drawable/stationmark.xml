<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <item>
        <vector
            android:width="@dimen/stationmarker_width"
            android:height="@dimen/stationmarker_height"
            android:viewportWidth="500"
            android:viewportHeight="580">
            <path
                android:pathData="M400,15A85,85 0,0 1,485 100L485,400A85,85 0,0 1,400 485L330,485L250,565L170,485L100,485A85,85 0,0 1,15 400L15,100A85,85 0,0 1,100 15Z"
                android:strokeLineJoin="round"
                android:strokeWidth="30"
                android:fillColor="@color/backgroundStationmarker"
                android:strokeColor="@color/backgroundStationmarker"/>
            <path
                android:pathData="M330,485L250,565L170,485"
                android:strokeLineJoin="round"
                android:strokeLineCap="round"
                android:strokeWidth="30"
                android:strokeAlpha="0.1">
                <aapt:attr name="android:strokeColor">
                    <gradient
                        android:centerX="250"
                        android:centerY="565"
                        android:gradientRadius="100"
                        android:type="radial">
                        <item android:offset="0" android:color="@color/foregroundStationmarker"/>
                        <item android:offset="1" android:color="@color/transparent"/>
                    </gradient>
                </aapt:attr>
            </path>
        </vector>
    </item>
    <item android:bottom="@dimen/stationmarker_arrow_size">
        <inset
            android:insetTop="@dimen/stationmarker_icon_padding"
            android:insetRight="@dimen/stationmarker_icon_padding"
            android:insetBottom="@dimen/stationmarker_icon_padding"
            android:insetLeft="@dimen/stationmarker_icon_padding"
            android:drawable="@drawable/stationmarker_icon" />
    </item>
</layer-list>
