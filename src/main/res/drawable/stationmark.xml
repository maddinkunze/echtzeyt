<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="@dimen/stationmarker_arrow_height">
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundStationmarker" />
            <corners android:radius="@dimen/stationmarker_radius"/>
            <size android:width="@dimen/stationmarker_size" android:height="@dimen/stationmarker_size" />
        </shape>
    </item>
    <item android:gravity="bottom|center_horizontal" android:bottom="@dimen/stationmarker_arrow_offset">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <solid android:color="@color/backgroundStationmarker"/>
                <size android:width="@dimen/stationmarker_arrow_size" android:height="@dimen/stationmarker_arrow_size"/>
            </shape>
        </rotate>
    </item>
    <item android:gravity="center" android:bottom="@dimen/stationmarker_arrow_height" android:drawable="@drawable/stationmarker_icon">
    </item>
</layer-list>